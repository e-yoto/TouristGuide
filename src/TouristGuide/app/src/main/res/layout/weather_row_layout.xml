<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".View.Weather.WeatherFragment">

    <TextView
        android:id="@+id/weather_forecast_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weather_forecast_date_sample"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimaryDark"/>

    <ImageView
        android:id="@+id/weather_forecast_image"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="left"
        android:src="@drawable/ic_w_cloudy" />

    <TextView
        android:id="@+id/weather_forecast_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/weather_forecast_temperature_sample"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>